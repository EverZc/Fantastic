<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="120dp"
    android:layout_height="130dp"
    >
    <ImageView
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/basic_iv_disc_default"
        android:id="@+id/item_changpian_imageview" />
    <ImageView
        android:scaleType="fitXY"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:src="@drawable/umeng_socialize_nav_bar_bg"
        android:id="@+id/imageView3"
        android:layout_below="@+id/item_changpian_imageview" />
    <TextView
        android:id="@+id/item_changpian_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
