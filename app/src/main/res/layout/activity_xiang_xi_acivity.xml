<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:id="@+id/title_linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_true"
        >
        <TextView
            android:id="@+id/xinagxi_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="篮球教学"
            android:textSize="23dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/xiangxi_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_linear">
        </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/jiazai"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在加载中,请稍后..."
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
